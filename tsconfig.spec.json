/**
 * Defines TypeScript testing properties by extending base defaults and specifying run parameters for validation workflow.
 * Processes workspace blueprints with mock types and output paths to maintain consistent behavior within the application.
 *
 * @since 01 December 2025
 * @author Rahul Kundu
 */
{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "./out-tsc/spec",
		"types": ["vitest/globals"]
	},
	"include": ["src/**/*.d.ts", "src/**/*.spec.ts"]
}
