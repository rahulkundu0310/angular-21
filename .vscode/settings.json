{
	// Defines general editor tab size and activates full format-on-save tasks
	"files.eol": "\n",
	"editor.tabSize": 4,
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"editor.cursorBlinking": "expand",
	"github.copilot.enable": { "*": false },
	"editor.cursorSmoothCaretAnimation": "on",

	// Applies Prettier formatting rules to produce reliably consistent output
	"prettier.semi": true,
	"prettier.useTabs": true,
	"prettier.printWidth": 100,
	"prettier.singleQuote": true,
	"prettier.proseWrap": "always",
	"prettier.requireConfig": false,
	"prettier.bracketSpacing": true,
	"prettier.trailingComma": "none",

	// Disables compact folder view keeping every directory visible by default
	"explorer.compactFolders": false,

	// Suppresses lint warnings for unknown CSS and SCSS at-rules in codebases
	"css.lint.unknownAtRules": "ignore",
	"scss.lint.unknownAtRules": "ignore",

	// Activates ESLint flat config with auto-fix applied to lint on each save
	"eslint.useFlatConfig": true,
	"editor.codeActionsOnSave": { "source.fixAll.eslint": "explicit" },

	// Associates yml and yaml file types to the YAML language for recognition
	"files.associations": {
		"*.yml": "yaml",
		"*.yaml": "yaml"
	},

	// Registers Prettier as the default formatter for all front-end languages
	"[css]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
	"[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
	"[html]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
	"[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
	"[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

	// Disables format-on-save and format-on-paste strictly for Markdown files
	"[markdown]": {
		"editor.formatOnSave": false,
		"editor.formatOnPaste": false,
		"editor.defaultFormatter": null
	},

	// Adjusts YAML-specific indentation and auto-indent spacing in the editor
	"[yaml]": {
		"editor.tabSize": 4,
		"editor.insertSpaces": true,
		"editor.autoIndent": "none",
		"editor.detectIndentation": true
	}
}
